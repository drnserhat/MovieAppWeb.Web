@model IEnumerable<MovieAppWeb.Web.Models.Hall>
@{
    ViewData["Title"] = "Salonlar";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1>Salonlar</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Salon Ekle</a>
    </p>

    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Salon Adı</th>
                        <th>Kapasite</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Capacity</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
@*                                 <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
 *@                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 
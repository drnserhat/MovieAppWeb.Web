@model MovieAppWeb.Web.Models.Movie
@{
    ViewData["Title"] = "Film Sil";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Film Sil</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Bu filmi silmek istediğinizden emin misiniz?</h4>
                        <p>Bu işlem geri alınamaz.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid rounded" />
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3">Film Adı</dt>
                                <dd class="col-sm-9">@Model.Title</dd>

                                <dt class="col-sm-3">Açıklama</dt>
                                <dd class="col-sm-9">@Html.Raw(Model.Description)</dd>

                                <dt class="col-sm-3">Süre</dt>
                                <dd class="col-sm-9">@Model.Duration dakika</dd>

                                <dt class="col-sm-3">Vizyon Tarihi</dt>
                                <dd class="col-sm-9">@Model.ReleaseDate.ToShortDateString()</dd>

                                <dt class="col-sm-3">Durum</dt>
                                <dd class="col-sm-9">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 
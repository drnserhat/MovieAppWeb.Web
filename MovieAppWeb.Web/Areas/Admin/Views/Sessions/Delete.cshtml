@model MovieAppWeb.Web.Models.Session
@{
    ViewData["Title"] = "Seans Sil";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Seans Sil</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Bu seansı silmek istediğinizden emin misiniz?</h4>
                        <p>Bu işlem geri alınamaz.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Film</dt>
                        <dd class="col-sm-9">@Model.Movie.Title</dd>

                        <dt class="col-sm-3">Salon</dt>
                        <dd class="col-sm-9">@Model.Hall.Name</dd>

                        <dt class="col-sm-3">Seans Tarihi</dt>
                        <dd class="col-sm-9">@Model.ShowTime.ToString("dd.MM.yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Bilet Fiyatı</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-3">Durum</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 
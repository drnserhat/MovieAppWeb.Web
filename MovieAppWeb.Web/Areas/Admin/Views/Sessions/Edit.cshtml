@model MovieAppWeb.Web.Models.Session
@{
    ViewData["Title"] = "Seans Düzenle";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Seans Düzenle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="MovieId" class="control-label">Film</label>
                            <select asp-for="MovieId" class="form-select" asp-items="ViewBag.MovieId">
                                <option value="">Film Seçin</option>
                            </select>
                            <span asp-validation-for="MovieId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="HallId" class="control-label">Salon</label>
                            <select asp-for="HallId" class="form-select" asp-items="ViewBag.HallId">
                                <option value="">Salon Seçin</option>
                            </select>
                            <span asp-validation-for="HallId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ShowTime" class="control-label">Seans Tarihi ve Saati</label>
                            <input asp-for="ShowTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="ShowTime" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Price" class="control-label">Bilet Fiyatı</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Aktif</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
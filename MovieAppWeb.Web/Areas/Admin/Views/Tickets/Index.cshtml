@model IEnumerable<MovieAppWeb.Web.Models.Ticket>
@{
    ViewData["Title"] = "Biletler";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Biletler</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Film</th>
                                <th>Salon</th>
                                <th>Seans Tarihi</th>
                                <th>Koltuk No</th>
                                <th>Kullanıcı</th>
                                <th>Satın Alma Tarihi</th>
                                <th>Fiyat</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Session.Movie.Title</td>
                                    <td>@item.Session.Hall.Name</td>
                                    <td>@item.Session.ShowTime.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@item.SeatNumber</td>
                                    <td>@item.User.Username</td>
                                    <td>@item.PurchaseDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">İptal</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 
@model MovieAppWeb.Web.Models.User
@{
    ViewData["Title"] = "Kullanıcı Sil";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Kullanıcı Sil</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Bu kullanıcıyı silmek istediğinizden emin misiniz?</h4>
                        <p>Bu işlem geri alınamaz.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Kullanıcı Adı</dt>
                        <dd class="col-sm-9">@Model.Username</dd>

                        <dt class="col-sm-3">E-posta</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Ad Soyad</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>

                        <dt class="col-sm-3">Telefon</dt>
                        <dd class="col-sm-9">@Model.Phone</dd>

                        <dt class="col-sm-3">Kayıt Tarihi</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Rol</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsAdmin)
                            {
                                <span class="badge bg-primary">Admin</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Kullanıcı</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Durum</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 
@model MovieAppWeb.Web.Models.User
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center"><h2>Giriş Yap</h2></div>
                <div class="card-body">
                    <form asp-area="" asp-controller="Account" asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label for="username" class="control-label">Kullanıcı Adı</label>
                            <input id="username" name="username" class="form-control" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="password" class="control-label">Şifre</label>
                            <input id="password" name="password" class="form-control" type="password" required />
                        </div>

                        @* Hidden input for returnUrl if needed *@
                        @if (ViewBag.ReturnUrl != null)
                        {
                            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                        }

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                        </div>
                    </form>
                    <p class="text-center mt-3">Hesabınız yok mu? <a asp-area="" asp-controller="Account" asp-action="Register">Kayıt Olun</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
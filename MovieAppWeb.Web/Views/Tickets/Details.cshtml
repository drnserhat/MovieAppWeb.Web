@model MovieAppWeb.Web.Models.Ticket
@{
    ViewData["Title"] = "Bilet Detayı";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Bilet Detayı</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Film Bilgileri</h5>
                            <p>
                                <strong>Film:</strong> @Model.Session.Movie.Title<br>
                                <strong>Seans:</strong> @Model.Session.ShowTime.ToString("dd.MM.yyyy HH:mm")<br>
                                <strong>Salon:</strong> @Model.Session.Hall.Name<br>
                                <strong>Koltuk:</strong> @Model.SeatNumber
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5>Bilet Bilgileri</h5>
                            <p>
                                <strong>Bilet No:</strong> @Model.Id<br>
                                <strong>Tutar:</strong> @Model.Price.ToString("C")<br>
                                <strong>Satın Alma Tarihi:</strong> @Model.PurchaseDate.ToString("dd.MM.yyyy HH:mm")<br>
                                <strong>Durum:</strong> @(Model.IsPaid ? "Ödendi" : "Ödenmedi")
                            </p>
                            @if (Model.IsPaid)
                            {
                                <p>
                                    <strong>Ödeme Referansı:</strong> @Model.PaymentReference
                                </p>
                            }
                        </div>
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 